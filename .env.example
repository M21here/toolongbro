# Anthropic API Key (required)
ANTHROPIC_API_KEY=sk-ant-api03-xxx

# AI Provider (default: anthropic)
AI_PROVIDER=anthropic

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL="file:./dev.db"
# For production with PostgreSQL:
# DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Privy Authentication
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id
PRIVY_APP_SECRET=your-privy-app-secret

# CoinPayments API v2 (for crypto payments)
COINPAYMENTS_API_URL=https://a-api.coinpayments.net
COINPAYMENTS_CLIENT_ID=your-client-id
COINPAYMENTS_CLIENT_SECRET=your-client-secret
COINPAYMENTS_WEBHOOK_SECRET=your-webhook-secret

# Legacy CoinPayments (deprecated, use API v2 above)
# COINPAYMENTS_PUBLIC_KEY=your-coinpayments-public-key
# COINPAYMENTS_PRIVATE_KEY=your-coinpayments-private-key
# COINPAYMENTS_MERCHANT_ID=your-merchant-id
# COINPAYMENTS_IPN_SECRET=your-ipn-secret

# App URL (for webhooks)
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production:
# NEXT_PUBLIC_APP_URL=https://toolongbro.com
